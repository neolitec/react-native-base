{
  "name": "ReactNativeBase",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "clean-all": "watchman watch-del-all && rm -rf node_modules/ && npm cache clean --force && npm install",
    "generate:icon": "react-native set-icon --path ./src/assets/icon.png  --background '#fff'",
    "generate:splash": "react-native set-splash --path ./src/assets/splash.png  --background '#fff' --resize center",
    "ios": "react-native run-ios",
    "lint": "eslint \"./{src,__tests__}/**/*.{ts,tsx}\"",
    "start": "react-native start",
    "storybook": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "{src,__tests__}/**/*.ts?(x)": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/types/**/*",
      "!src/storybook/**/*",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "react-native",
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js",
      "./__tests__/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|react-navigation|@react-navigation|@react-native-community|@sentry/react-native/.*))"
    ]
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.7.1",
    "@react-native-community/masked-view": "^0.1.6",
    "@react-navigation/native": "^5.0.5",
    "@react-navigation/stack": "^5.0.5",
    "@storybook/react-native": "^5.3.12",
    "ky": "^0.17.0",
    "mobx": "^4.15.4",
    "mobx-react-lite": "^1.5.2",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-device-info": "^5.5.3",
    "react-native-gesture-handler": "^1.5.6",
    "react-native-idle-timer": "^2.1.6",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.0.0-beta.2",
    "react-native-splash-screen": "^3.2.0",
    "reactotron-core-client": "^2.8.10",
    "reactotron-react-native": "^4.0.3",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/runtime": "^7.6.2",
    "@bam.tech/react-native-make": "^1.0.3",
    "@react-native-community/eslint-config": "^0.0.7",
    "@storybook/addon-storyshots": "^5.3.13",
    "@storybook/react-native-server": "^5.3.12",
    "@types/jest": "^25.1.2",
    "@types/react-native": "^0.61.15",
    "@types/react-test-renderer": "16.9.2",
    "@types/styled-components": "^4.4.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "metro-react-native-babel-preset": "^0.58.0",
    "react-test-renderer": "16.12.0",
    "sort-package-json": "^1.40.0",
    "typescript": "^3.7.3"
  }
}
